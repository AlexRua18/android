<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <View
       android:id="@+id/caja1"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintVertical_bias="0.09"
       android:background="@color/black"
       android:layout_width="200dp"
       android:layout_height="150dp"
       />
   <View
       android:id="@+id/caja2"
       app:layout_constraintTop_toBottomOf="@id/caja1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintVertical_bias="0.05"
       android:background="@color/material_dynamic_neutral40"
       android:layout_width="200dp"
       android:layout_height="150dp"
       />
   <View
       android:id="@+id/caja3"
       app:layout_constraintTop_toBottomOf="@id/caja2"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="@id/caja4"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintHorizontal_bias="0.10"
       app:layout_constraintVertical_bias="0.05"
       android:background="@color/design_default_color_primary_dark"
       android:layout_width="150dp"
       android:layout_height="150dp"
       />

   <View
       android:id="@+id/caja4"
       app:layout_constraintTop_toBottomOf="@id/caja2"
       app:layout_constraintStart_toStartOf="@id/caja3"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintHorizontal_bias="0.90"
       app:layout_constraintVertical_bias="0.05"
       android:background="@color/material_dynamic_primary50"
       android:layout_width="150dp"
       android:layout_height="150dp"
       />


</androidx.constraintlayout.widget.ConstraintLayout>